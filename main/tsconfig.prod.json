{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "../.Main",
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "target": "es2015",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
